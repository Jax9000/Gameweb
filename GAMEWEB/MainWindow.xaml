<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GAMEWEB"
        xmlns:Controlls="clr-namespace:GAMEWEB.Controlls" x:Class="GAMEWEB.MainWindow"
        mc:Ignorable="d"
        Title="{Binding Mode=OneWay, Source={x:Static local:User.Username}}" Height="600" Width="1000">
    <TabControl Name="TabPanel" ItemsSource="{Binding TabCollection}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    </TabControl>
</Window>
