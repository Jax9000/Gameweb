<UserControl x:Class="GAMEWEB.Controlls.Presenters.SmallGamePresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GAMEWEB.Controlls.Presenters"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="600"
             HorizontalAlignment="Stretch"
             Margin="0,0,0,10">
    <Grid>
        <Button x:Name="button" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="button_Click"/>
        <Label x:Name="labelName" Content="GameTitle"  VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" IsHitTestVisible="False" FontSize="32"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="200">
            <Label x:Name="label" Content="Średnia ocena użytkowników:" VerticalAlignment="Center" IsHitTestVisible="False"/>
            <Label x:Name="labelRank" Content="0" VerticalAlignment="Center" IsHitTestVisible="False"/>
        </StackPanel>
    </Grid>
</UserControl>
