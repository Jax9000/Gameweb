<UserControl x:Class="GAMEWEB.Controlls.MainTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GAMEWEB.Controlls"
             mc:Ignorable="d" 
             d:DesignHeight="300"
             d:DesignWidth="500"
             Name="MainTabName" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="92*"/>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="gamesRank" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ScrollViewer.CanContentScroll="True" Grid.Row="1"/>
        <Label x:Name="label" Content="Ranking gier" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" Margin="112,12,112,8"/>
    </Grid>
</UserControl>
